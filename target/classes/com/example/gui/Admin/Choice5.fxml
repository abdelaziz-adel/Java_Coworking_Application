<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="616.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JasonOOP.Controllers.Admin.Choice5_Controller">

    <!-- Header -->
    <Pane layoutX="1.0" prefHeight="48.0" prefWidth="979.0" style="-fx-background-color: rgba(255, 255, 255, 0.2);">
        <Label layoutX="9.0" layoutY="11.0" style="-fx-font-size: 17;" text="Add a Slot" />
    </Pane>

    <!-- Input Section -->
    <Pane layoutX="1.0" layoutY="51.0" prefHeight="100.0" prefWidth="979.0" style="-fx-background-color: rgba(255, 255, 255, 0.1);">
        <Label layoutX="45.0" layoutY="25.0" style="-fx-font-size: 17;" text="Enter Room Type:" />
        <TextField fx:id="roomTypeField" layoutX="310.0" layoutY="20.0" prefWidth="300.0" promptText="Room Type" style="-fx-font-size: 17;" />
    </Pane>

    <Pane layoutX="1.0" layoutY="154.0" prefHeight="100.0" prefWidth="979.0" style="-fx-background-color: rgba(255, 255, 255, 0.1);">
        <Label layoutX="45.0" layoutY="25.0" style="-fx-font-size: 17;" text="Enter Room Number:" />
        <TextField fx:id="roomNumberField" layoutX="310.0" layoutY="20.0" prefWidth="300.0" promptText="Room Number" style="-fx-font-size: 17;" />
    </Pane>

    <Pane layoutX="1.0" layoutY="257.0" prefHeight="100.0" prefWidth="979.0" style="-fx-background-color: rgba(255, 255, 255, 0.1);">
        <Label layoutX="45.0" layoutY="25.0" style="-fx-font-size: 17;" text="Enter Slot Number:" />
        <TextField fx:id="slotNumberField" layoutX="310.0" layoutY="20.0" prefWidth="300.0" promptText="Slot Number" style="-fx-font-size: 17;" />
        <Button fx:id="addSlotButton" layoutX="700.0" layoutY="20.0" mnemonicParsing="false" style="-fx-font-size: 17; -fx-background-radius: 4px; -fx-padding: 6px 6px;" styleClass="Bconfirm" text="Add Slot" />
    </Pane>

    <!-- Status Message -->
    <Pane layoutX="1.0" layoutY="360.0" prefHeight="46.0" prefWidth="979.0" style="-fx-background-color: rgba(255, 255, 255, 0.1);">
        <Label fx:id="statusLabel" layoutX="9.0" layoutY="11.0" style="-fx-font-size: 17;" text="Status: Awaiting input..." />
    </Pane>
</AnchorPane>
